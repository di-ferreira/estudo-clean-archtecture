{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ES2022",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./",
    "strict": false,
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "paths": {
      "@/*": [
        "./src/*"
      ],
    }
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "./tests"
  ]
}